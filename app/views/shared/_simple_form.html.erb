<% # THIS IS GOOD FOR SIMPLE ENUM-LIKE OBJECTS %>

<%= form_for obj do |f| %>
  <%= f.hidden_field(:active, :value => 1) %>
  <div class="row">
    <div class="large-12 columns">
      <div class="row collapse">
        <div class="large-5 medium-5 small-10 columns">
          <%= f.text_field :name, 'placeholder' => placeholder %>
        </div>
        <div class="small-1 columns">
          <%= f.button raw('<i class="fa fa-floppy-o"></i>'), 'class'=>'button info postfix' %>
        </div>
        <div class="small-1 columns">
          <% if obj.persisted? then %>
            <%= link_to raw('<i class="fa fa-times"></i>'), obj, method: :delete, 'class'=>'button alert postfix' %>
          <% end %>
        </div>
        <div class="large-5 medium-6 small-0 columns"></div>
      </div>
    </div>
  </div>
  <% if obj.persisted? then %>
  <div class="row">
    <div class="small-12 columns newLink">
      <%= link_to "+New",  polymorphic_path(obj.class.new) %></a>
    </div>
  </div>
  <% end %>
  <% allObjects.each do |obj| %>
  <div class="row">
    <div class="large-6 medium-6 small-10 columns">
      <%= link_to raw('<i class="fa fa-pencil-square-o"></i> ' + obj.name), polymorphic_path(obj, :action => 'edit') -%>
    </div>
    <div class="large-6 medium-6 small-0 columns"></div>
  </div>
  <% end %>
<% end %>
