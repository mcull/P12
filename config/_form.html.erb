<%= form_for @category do |f| %>
  <%= f.hidden_field(:active, :value => 1) %>
  <div class="row">
    <div class="small-8 columns">
      <div class="row">
        <div class="small-3 columns">
          <label for="name" class="right inline">Name</label>
        </div>
        <div class="small-9 columns">
          <%= f.text_field :name, 'placeholder' => 'New Goods Category' %>
        </div>
      </div>
      <div class="row">
        <div class="small-3 columns">
          <label for="contact_email" class="right inline">Amazon Feed Manager Class</label>
        </div>
        <div class="small-9 columns">
          <%= f.text_field :amazon_feed_manager_class %>
        </div>
      </div>
      <div class="row">
        <div class="small-4 small-offset-8 columns" style="text-align:center">
          <div class="row">
            <div class="small-6 columns <%= (@category.persisted?) ? "" : "small-offset-6" %>">
              <%= f.button raw('<i class="fa fa-floppy-o"></i>'), 'class'=>'button info small' %>
            </div>
            <% if @category.persisted? then %>
            <div class="small-6 columns">
              <%= link_to raw('<i class="fa fa-times"></i>'), @category, method: :delete, 'class'=>'button alert small' %>

            </div>
            <% end %>
          </div>
        </div>
      </div>
  </div>
  </div>
  <% end %>
