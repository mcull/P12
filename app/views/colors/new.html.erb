<%= form_for @color, url: {action: "create"} do |f| %>
  <div class="row">
    <div class="large-12 columns">
      <div class="row collapse">
        <div class="small-5 columns">
          <%= f.text_field :name, 'placeholder' => 'New Color' %>
        </div>
        <div class="small-1 columns">
          <%= f.submit '+', 'class'=>'button postfix' %>
        </div>
        <div class="small-6 columns"></div>
      </div>
    </div>
  </div>
  <% Color.limit(100).sort.each do |c| %>
  <div class="row">
    <div class="small-5 columns"><%= c.name %></div>
    <div class="small-1 columns">[x]</div>
    <div class="small-6 columns"></div>
  </div>
  <% end %>
<% end %>
