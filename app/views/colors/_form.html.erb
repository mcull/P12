<%= form_for @color do |f| %>
  <%= f.hidden_field(:active, :value => 1) %>
  <div class="row">
    <div class="small-8 columns">
      <div class="row">
        <div class="small-3 columns">
          <label for="name" class="right inline">Name</label>
        </div>
        <div class="small-9 columns">
          <%= f.text_field :name, 'placeholder' => 'New Color' %>
        </div>
      </div>
      <div class="row">
        <div class="small-3 columns">
          <label for="Amazon" class="right inline">Amazon Color Map</label>
        </div>
        <div class="small-9 columns">
          <%= f.text_field :amazon_color_map %>
        </div>
      </div>
      <div class="row">
        <div class="small-4 small-offset-8 columns" style="text-align:center">
          <div class="row">
            <div class="small-6 columns <%= (@color.persisted?) ? "" : "small-offset-6" %>">
              <%= f.button raw('<i class="fa fa-floppy-o"></i>'), 'class'=>'button info small' %>
            </div>
            <% if @color.persisted? then %>
            <div class="small-6 columns">
              <%= link_to raw('<i class="fa fa-times"></i>'), @color, method: :delete, 'class'=>'button alert small' %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
  </div>
  </div>
    <% allColors.each do |obj| %>
    <div class="row">
      <div class="large-6 medium-6 small-10 columns">
        <%= link_to raw('<i class="fa fa-pencil-square-o"></i> ' + obj.name), polymorphic_path(obj, :action => 'edit') -%>
      </div>
      <div class="large-6 medium-6 small-0 columns"></div>
    </div>
    <% end %>
  <% end %>
